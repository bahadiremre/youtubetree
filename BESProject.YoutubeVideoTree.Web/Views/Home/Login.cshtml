@model UserLogInViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="masthead container-fluid h-100 ">
    <div class="row justify-content-sm-center mt-sm-n3">
        <div class="card shadow col-sm-6 col-lg-4 ">
            <div class="card-body">
                <h2 class="text-center card-title">Oturum Açın</h2>
                <form method="post" asp-controller="Home" asp-action="Login" class="">
                    <div class="py-3">
                        <div class="form-group">
                            <input asp-for="@Model.UserName" placeholder="@Html.DisplayNameFor(m=>m.UserName)" class="form-control" />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="password" asp-for="@Model.Password" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.Password)" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    </div>
                    <div  asp-validation-summary="ModelOnly" class="alert alert-danger">
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section JavaScript{
    <script src="~/lib/jquery-val/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-unob/jquery.validate.unobtrusive.min.js"></script>
}